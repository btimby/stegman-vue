{
  "name": "stegman-vue",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/stegman-vue.umd.cjs",
  "module": "./dist/stegman-vue.js",
  "exports": {
    ".": {
      "import": "./dist/stegman-vue.js",
      "require": "./dist/stegman-vue.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build -w",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest --reporter=dot --silent",
    "test:coverage": "vitest run --coverage",
    "version": "cd demo && npm version --no-git-tag-version $npm_package_version && commit -m $npm_package_version package.json package-lock.json"
  },
  "dependencies": {
    "@jamescoyle/vue-icon": "^0.1.2",
    "@mdi/js": "^7.3.67",
    "stegtext": "^1.0.2",
    "vue": "^3.3.8"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vue/test-utils": "^2.4.2",
    "jsdom": "^22.1.0",
    "vite": "^5.0.0",
    "vitest": "^0.34.6"
  }
}
